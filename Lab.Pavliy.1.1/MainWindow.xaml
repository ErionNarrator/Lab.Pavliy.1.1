<Window x:Class="Lab.Pavliy._1._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab.Pavliy._1._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter the coefficients for the equation ax^2 + bx + c = 0" Margin="5"/>
            <TextBox x:Name="a" Margin="5" Width="50" Text="1"/>
            <TextBox x:Name="b" Margin="5" Width="50" Text="1"/>
            <TextBox x:Name="c" Margin="5" Width="50" Text="1"/>
            <Button Content="Calculate Roots" Margin="5" Click="Button_Click"/>
            <TextBlock x:Name="ResFirst" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
